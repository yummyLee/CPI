<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:background="@color/aliceblue"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.example.qq985.cpi.Function.XCRoundImageView
            android:id="@+id/iv_talk_asker_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_talk_asker_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="傻巴度" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_talk_reply_count"
                            android:layout_marginTop="1dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/ic_forum_comment" />

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/tv_problem_reply_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="113" />

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_talk_sees_count"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/ic_forum_follow" />

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/tv_problem_sees_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="3138" />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_talk_problem_date"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="2016-8-26"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_talk_problem_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:paddingBottom="5dp"
                android:text="大哈苏德挥洒点解啊岁的卡设记阿萨德撒打算起我"
                android:textColor="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_talk_problem_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="1"
                    android:paddingRight="10dp"
                    android:text="经济"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/tv_talk_problem_type"
                    android:text="类型|"
                    android:textSize="11dp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>