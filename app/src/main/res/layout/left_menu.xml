<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_left_menu_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_left_menu"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_left_menu_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp">


            <ImageView
                android:id="@+id/nv_header"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:clickable="true"
                android:paddingLeft="14dp"
                android:paddingTop="15dp"
                android:src="@drawable/header" />

            <TextView
                android:id="@+id/tv_nv_header_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="14dp"
                android:paddingTop="14dp"
                android:text="两米"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_nv_header_illustration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="14dp"
                android:text="这个人很懒，什么都没有留下"
                android:textColor="@color/black"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_left_menu_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/ll_left_menu_item_home"
                layout="@layout/left_menu_list_item"></include>

            <include
                android:id="@+id/ll_left_menu_item_concept"
                layout="@layout/left_menu_list_item"></include>

            <include
                android:id="@+id/ll_left_menu_item_cpi"
                layout="@layout/left_menu_list_item"></include>

            <include
                android:id="@+id/ll_left_menu_item_price"
                layout="@layout/left_menu_list_item"></include>

            <include
                android:id="@+id/ll_left_menu_item_hot"
                layout="@layout/left_menu_list_item"></include>

            <include
                android:id="@+id/ll_left_menu_item_talk"
                layout="@layout/left_menu_list_item"></include>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <include
            android:id="@+id/ll_left_menu_item_more"
            layout="@layout/left_menu_list_item"></include>

        <include
            android:id="@+id/ll_left_menu_item_clct"
            layout="@layout/left_menu_list_item"></include>

        <include
            android:id="@+id/ll_left_menu_item_setttings"
            layout="@layout/left_menu_list_item"></include>


    </LinearLayout>

</RelativeLayout>